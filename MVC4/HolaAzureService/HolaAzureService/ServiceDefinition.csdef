<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="HolaAzureService" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2015-04.2.6">
  <WebRole name="HolaAzureRole" vmsize="ExtraSmall">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="HolaExternal" />
          <Binding name="Endpoint1" endpointName="HolaInternal" />
        </Bindings>
      </Site>
    </Sites>
    <ConfigurationSettings>
      <Setting name="Microsoft.WindowsAzure.Plugins.Diagnostics.ConnectionString" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="HolaExternal" protocol="http" port="80" />
      <InternalEndpoint name="HolaInternal" protocol="http" />
    </Endpoints>
  </WebRole>
  <WorkerRole name="HolaAzureWorker" vmsize="Small">
    <ConfigurationSettings>
      <Setting name="Microsoft.WindowsAzure.Plugins.Diagnostics.ConnectionString" />
    </ConfigurationSettings>
  </WorkerRole>
  <WebRole name="HolaAzureInternalService" vmsize="Small">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="InternalHola" />
        </Bindings>
      </Site>
    </Sites>
    <ConfigurationSettings>
      <Setting name="Microsoft.WindowsAzure.Plugins.Diagnostics.ConnectionString" />
    </ConfigurationSettings>
    <Endpoints>
      <InternalEndpoint name="InternalHola" protocol="http" />
    </Endpoints>
  </WebRole>
</ServiceDefinition>